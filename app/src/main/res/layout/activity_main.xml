<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saludo"
        android:textColor="@color/colorAzul"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081"
        android:fontFamily="serif-monospace"
        />

    <EditText
        android:id="@+id/id_usr"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/borde_circle"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/txt_user"
        android:inputType="textPersonName"
        android:textColor="@color/colorGris"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.185" />

    <EditText
        android:id="@+id/id_mail"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/borde_circle"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/txt_emain"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorGris"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326" />


    <EditText
        android:id="@+id/id_pass"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/borde_circle"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/txt_pass"
        android:inputType="textPassword"
        android:textColor="@color/colorGris"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464" />

    <EditText
        android:id="@+id/id_pass2"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/borde_circle"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/txt_verPass"
        android:inputType="textPassword"
        android:textColor="@color/colorGris"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.597" />

    <Button
        android:id="@+id/id_ok"
        android:layout_width="283dp"
        android:layout_height="55dp"
        android:text="@string/txt_valida"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961"
        android:background="@drawable/bordes"
        android:textColor="@color/colorBlanco"
        />

</androidx.constraintlayout.widget.ConstraintLayout>